            <TableColumn fx:id="productdesc_Column" prefWidth="327.0" text="Description" />
        </columns>
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" onAction="#loadEditProduct" text="Edit" />
                  <MenuItem mnemonicParsing="false" text="Delete" />
              </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
      <Label layoutX="682.0" prefHeight="53.0" prefWidth="160.0" text="Inventory">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <TextField fx:id="productname_Text" layoutX="621.0" layoutY="53.0" prefHeight="53.0" prefWidth="160.0" promptText="ProductName" />
      <TextField fx:id="productquantity_Text" layoutX="621.0" layoutY="116.0" prefHeight="53.0" prefWidth="160.0" promptText="Quantity" />
      <DatePicker fx:id="productdate_Date" layoutX="621.0" layoutY="179.0" prefHeight="53.0" prefWidth="160.0" promptText="Date" />

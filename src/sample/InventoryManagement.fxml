   <children>
      <TableView fx:id="productList" layoutX="14.0" layoutY="14.0" prefHeight="498.0" prefWidth="581.0">
        <columns>
          <TableColumn fx:id="productname_Column" prefWidth="117.0" text="Product Name" />

      <Button layoutX="621.0" layoutY="453.0" mnemonicParsing="false" onAction="#handleAddProduct" prefHeight="53.0" prefWidth="200.0" text="Add Product" />
      <Button layoutX="828.0" layoutY="453.0" mnemonicParsing="false" onAction="#handleRefresh" prefHeight="25.0" prefWidth="70.0" text="Refresh" />
      <Button layoutX="828.0" layoutY="480.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="70.0" text="Back" />
   </children>
